#include <iostream>
#include "wordNode.h"

using namespace std;

wordNode::wordNode() {
        wordNode wn;
        wn.lineNumber = 0; 
        wn.word = NULL;
        wn.line = NULL;
        wn.next = NULL; 
}

wordNode::wordNode(string word, int lineNumber, string line) {
        wordNode wn;
        wn.lineNumber = lineNumber;
        wn.word = word;
        wn.line = line;
        wn.next = NULL;
}

wordNode::~wordNode() {
}

int wordNode::getLineNumber() {
        return wn.lineNumber;
}

string wordNode::getWord() {
        return wn.word;
}

string wordNode::getLine() {
        return wn.line;
}
